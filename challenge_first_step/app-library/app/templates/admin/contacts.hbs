{{#if session.isAuthenticated}}
  <h1>Contacts</h1>

  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Email</th>
        <th>Message</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    {{#each model as |contact|}}
      <tr>
        <th>{{contact.email}}</th>
        <td>{{contact.message}}</td>
        <td><button class="btn btn-danger btn-xs" {{action 'deleteContact' contact}}>Delete</button></td>
      </tr>
    {{/each}}
    </tbody>
  </table>
{{else}}
  <div class="row">
      <div class="col-sm-4 col-sm-offset-4">
      <h2 class="form-signin-heading">Please sign in</h2>
          <form>
              <div class="form-group">
                <label>Email address</label>
                {{input value=email type="email" id="inputEmail" class="form-control" placeholder="Email address (try: teste@peerdustry.com)" required=true autofocus=true}}
              </div>
              <div class="form-group">
                <label>Password</label>
                {{input value=pswd type="password" id="inputPassword" class="form-control" placeholder="Password (try: teste123)" required=true}}
              </div>
              <button class="btn btn-lg btn-primary btn-block" {{action "signIn" email pswd}}>Sign in</button>
          </form>
      </div>
  </div>
{{/if}}
